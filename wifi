#!/bin/bash

# Color definitions
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Function to display current WiFi status
show_status() {
    echo -e "\n${PURPLE}=== Current WiFi Status ===${NC}"
    nmcli general status
    echo -e "\n${CYAN}=== Device Status ===${NC}"
    nmcli device status
    echo -e "\n${YELLOW}=== Connection Details ===${NC}"
    nmcli connection show --active
}

# Function to scan for available WiFi networks
scan_wifi() {
    echo -e "\n${BLUE}=== Scanning for WiFi Networks... ===${NC}"
    nmcli device wifi list
}

# Function to connect to a WiFi network
connect_wifi() {
    echo -e "\n${GREEN}=== Connect to WiFi Network ===${NC}"
    scan_wifi
    
    echo -e "\n${YELLOW}Enter the SSID of the network you want to connect to:${NC}"
    read -p "SSID: " ssid
    
    echo -e "\n${YELLOW}Enter the password (leave empty for open networks):${NC}"
    read -sp "Password: " password
    echo ""
    
    echo -e "\n${BLUE}Attempting to connect to ${CYAN}$ssid${BLUE}...${NC}"
    
    if [ -z "$password" ]; then
        nmcli device wifi connect "$ssid"
    else
        nmcli device wifi connect "$ssid" password "$password"
    fi
    
    if [ $? -eq 0 ]; then
        echo -e "\n${GREEN}Successfully connected to ${CYAN}$ssid${GREEN}!${NC}"
    else
        echo -e "\n${RED}Failed to connect to ${CYAN}$ssid${RED}. Please check your credentials and try again.${NC}"
    fi
}

# Main menu
while true; do
    echo -e "\n${PURPLE}===== WiFi Manager =====${NC}"
    echo -e "${GREEN}1. Show current WiFi status"
    echo -e "2. Scan for available WiFi networks"
    echo -e "3. Connect to a WiFi network"
    echo -e "4. Exit${NC}"
    echo -e "\n${YELLOW}Please choose an option (1-4):${NC}"
    
    read -p "Option: " choice
    
    case $choice in
        1)
            show_status
            ;;
        2)
            scan_wifi
            ;;
        3)
            connect_wifi
            ;;
        4)
            echo -e "\n${BLUE}Goodbye!${NC}\n"
            exit 0
            ;;
        *)
            echo -e "\n${RED}Invalid option. Please try again.${NC}"
            ;;
    esac
done
